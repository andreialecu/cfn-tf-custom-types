        },
        "Id": {
            "type": "string"
        },
        "Name": {
            "type": "string",
            "description": "The name of the storage policy."
        },
        "TagRules": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/TagRulesDefinition"
