            "additionalProperties": false,
            "properties": {
                "IncludeDatastoresWithTags": {
                    "type": "boolean"
                },
                "TagCategory": {
                    "type": "string"
                },
                "Tags": {
                    "type": "array",
                    "insertionOrder": false,
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "TagCategory",
                "Tags"
            ]
        }
    },
    "properties": {
