{
    "typeName": "TF::OpsGenie::AlertPolicy",
    "description": "Manages a Alert Policy within Opsgenie.",
    "sourceUrl": "https://github.com/iann0036/cfn-tf-custom-types.git",
    "documentationUrl": "https://github.com/iann0036/cfn-tf-custom-types/blob/docs/resources/opsgenie/TF-OpsGenie-AlertPolicy/docs/README.md",
    "definitions": {
        "FilterDefinition": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Type": {
                    "type": "string"
                },
                "Conditions": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "$ref": "#/definitions/ConditionsDefinition"
                    }
                }
            },
            "required": []
        },
        "RespondersDefinition": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Id": {
                    "type": "string",
                    "description": "ID of the responder."
                },
                "Name": {
                    "type": "string",
                    "description": "Name of the responder."
                },
                "Type": {
                    "type": "string",
                    "description": "Type of responder. Acceptable values are: `user` or `team`."
                },
                "Username": {
                    "type": "string",
                    "description": "Username of the responder."
                }
            },
            "required": [
                "Id",
                "Type"
            ]
        },
        "TimeRestrictionDefinition": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Type": {
                    "type": "string",
                    "description": "Defines if restriction should apply daily on given hours or on certain days and hours. Possible values are: `time-of-day`, `weekday-and-time-of-day`."
                },
                "Restriction": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "$ref": "#/definitions/RestrictionDefinition"
                    }
                },
                "Restrictions": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "$ref": "#/definitions/RestrictionsDefinition"
                    }
                }
            },
            "required": [
                "Type"
            ]
        },
        "ConditionsDefinition": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "ExpectedValue": {
                    "type": "string",
                    "description": "User defined value that will be compared with alert field according to the operation. Default: empty string."
                },
                "Field": {
                    "type": "string",
                    "description": "Specifies which alert field will be used in condition. Possible values are `message`, `alias`, `description`, `source`, `entity`, `tags`, `actions`, `details`, `extra-properties`, `recipients`, `teams`, `priority`."
                },
                "Key": {
                    "type": "string",
                    "description": "If `field` is set as extra-properties, key could be used for key-value pair."
                },
                "Not": {
                    "type": "boolean",
                    "description": "Indicates behaviour of the given operation. Default: `false`."
                },
                "Operation": {
                    "type": "string",
                    "description": "It is the operation that will be executed for the given field and key. Possible operations are `matches`, `contains`, `starts-with`, `ends-with`, `equals`, `contains-key`, `contains-value`, `greater-than`, `less-than`, `is-empty`, `equals-ignore-whitespace`."
                },
                "Order": {
                    "type": "number",
                    "description": "Order of the condition in conditions list."
                }
            },
            "required": [
                "Field",
                "Operation"
            ]
        },
        "RestrictionDefinition": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "EndHour": {
                    "type": "number",
                    "description": "Ending hour of restriction."
                },
                "EndMin": {
                    "type": "number",
                    "description": "Ending minute of restriction on defined `end_hour`."
                },
                "StartHour": {
                    "type": "number",
                    "description": "Starting hour of restriction."
                },
                "StartMin": {
                    "type": "number",
                    "description": "Staring minute of restriction on defined `start_hour`."
                }
            },
            "required": [
                "EndHour",
                "EndMin",
                "StartHour",
                "StartMin"
            ]
        },
        "RestrictionsDefinition": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "EndDay": {
                    "type": "string",
                    "description": "Ending day of restriction (eg. `wednesday`)."
                },
                "EndHour": {
                    "type": "number",
                    "description": "Ending hour of restriction on defined `end_day`."
                },
                "EndMin": {
                    "type": "number",
                    "description": "Ending minute of restriction on defined `end_hour`."
                },
                "StartDay": {
                    "type": "string",
                    "description": "Starting day of restriction (eg. `monday`)."
                },
                "StartHour": {
                    "type": "number",
                    "description": "Starting hour of restriction on defined `start_day`."
                },
                "StartMin": {
                    "type": "number",
                    "description": "Staring minute of restriction on defined `start_hour`."
                }
            },
            "required": [
                "EndDay",
                "EndHour",
                "EndMin",
                "StartDay",
                "StartHour",
                "StartMin"
            ]
        }
    },
    "properties": {
        "tfcfnid": {
            "description": "Internal identifier for tracking resource changes. Do not use.",
            "type": "string"
        },
        "Actions": {
            "type": "array",
            "insertionOrder": true,
            "items": {
                "type": "string"
            },
            "description": "Actions to add to the alerts original actions value as a list of strings. If `ignore_original_actions` field is set to `true`, this will replace the original actions."
        },
        "AlertDescription": {
            "type": "string",
            "description": "Description of the alert. You can use `{{description}}` to refer to the original alert description. Default: `{{description}}`."
        },
        "Alias": {
            "type": "string",
            "description": "Alias of the alert. You can use `{{alias}}` to refer to the original alias. Default: `{{alias}}`."
        },
        "ContinuePolicy": {
            "type": "boolean",
            "description": "It will trigger other modify policies if set to `true`. Default: `false`."
        },
        "Enabled": {
            "type": "boolean",
            "description": "If policy should be enabled. Default: `true`."
        },
        "Entity": {
            "type": "string",
            "description": "Entity field of the alert. You can use `{{entity}}` to refer to the original entity. Default: `{{entity}}`."
        },
        "Id": {
            "type": "string"
        },
        "IgnoreOriginalActions": {
            "type": "boolean",
            "description": "If set to `true`, policy will ignore the original actions of the alert. Default: `false`."
        },
        "IgnoreOriginalDetails": {
            "type": "boolean",
            "description": "If set to `true`, policy will ignore the original details of the alert. Default: `false`."
        },
        "IgnoreOriginalResponders": {
            "type": "boolean",
            "description": "If set to `true`, policy will ignore the original responders of the alert. Default: `false`."
        },
        "IgnoreOriginalTags": {
            "type": "boolean",
            "description": "If set to `true`, policy will ignore the original tags of the alert. Default: `false`."
        },
        "Message": {
            "type": "string",
            "description": "Message of the alerts."
        },
        "Name": {
            "type": "string",
            "description": "Name of the alert policy."
        },
        "PolicyDescription": {
            "type": "string",
            "description": "Description of the policy. This can be max 512 characters."
        },
        "Priority": {
            "type": "string",
            "description": "Priority of the alert. Should be one of `P1`, `P2`, `P3`, `P4`, or `P5`."
        },
        "Source": {
            "type": "string",
            "description": "Source field of the alert. You can use `{{source}}` to refer to the original source. Default: `{{source}}`."
        },
        "Tags": {
            "type": "array",
            "insertionOrder": true,
            "items": {
                "type": "string"
            },
            "description": "Tags to add to the alerts original tags value as a list of strings. If `ignore_original_responders` field is set to `true`, this will replace the original responders."
        },
        "TeamId": {
            "type": "string",
            "description": "Id of team that this policy belongs to."
        },
        "Filter": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/FilterDefinition"
            }
        },
        "Responders": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/RespondersDefinition"
            }
        },
        "TimeRestriction": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/TimeRestrictionDefinition"
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "Message",
        "Name"
    ],
    "readOnlyProperties": [
        "/properties/tfcfnid",
        "/properties/Id"
    ],
    "primaryIdentifier": [
        "/properties/tfcfnid"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "s3:GetObject",
                "s3:DeleteObject",
                "lambda:InvokeFunction"
            ]
        },
        "read": {
            "permissions": [
                "s3:GetObject"
            ]
        },
        "update": {
            "permissions": [
                "s3:GetObject",
                "s3:DeleteObject",
                "lambda:InvokeFunction"
            ]
        },
        "delete": {
            "permissions": [
                "s3:GetObject",
                "s3:DeleteObject",
                "lambda:InvokeFunction"
            ]
        },
        "list": {
            "permissions": [
                "s3:GetObject",
                "s3:ListBucket"
            ]
        }
    }
}